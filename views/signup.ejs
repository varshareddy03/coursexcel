<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <!-- Google Font -->
     <link href="https://fonts.googleapis.com/css?family=Nunito:200,300,400,700" rel="stylesheet">
     <link href= "/public/assets/signup.css" rel="stylesheet" type="text/css" />
     <!-- Bootstrap CSS -->
     <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
     <link rel="icon" href="/public/assets/CourseXcel.png">
     <title>CourseXcel</title>
</head>
<body>
    <nav id="mainNavbar" class="navbar navbar-dark navbar-expand-md py-0 fixed-top">
        <a href="/" class="navbar-brand">CourseXcel</a>
    </nav>
    <section class="vh-100">
        <div class="container h-100">
          <div class="row d-flex justify-content-center align-items-center">
            <div class="col-lg-9 col-xl-9 mt-5">
              <div class="card text-black mt-5" style="border-radius: 25px;">
                <div class="card-body md-5">
                  <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7 order-2 order-lg-1">
      
                      <p class="text-center h1 fw-bold mb-2">Sign up</p>
                      If you have already registered,
                      <a href="/login" >login here</a>
    <form action="/signup" method="POST" >
        <label class="namef">Your Name</label>
        <input class="form-control" type="text" id="name" name="name" placeholder="Enter Name"  />
        <label class="emailf">Your Email</label>
        <input class="form-control" type="text" id="email" name="email" placeholder="Enter Email"  />
        <label class="password1f" >Password</label>
        <input  class="form-control" type="password" id="password1" name="password1" placeholder="Enter Password" /><br>
        <input  type="radio" id="Teacher" name="category" value="Teacher">
        <label for="Teacher">Teacher</label><br>
        <input  type="radio" id="Student" name="category" value="Student"> 
        <label for="Student">Student</label><br>
        <label class="t_idf">Your t-id</label>
        <input class="form-control" type="text" id="t_id" name="t_id" placeholder="Enter t_id"  />
        <label class="s_idf">Your s-id</label>
        <input class="form-control" type="text" id="s_id" name="s_id" placeholder="Enter s_id"  />
        <label class="classidf">Your classid</label>
        <input class="form-control" type="text" id="classid" name="classid" placeholder="Enter classid"  />
        
        <button class="btn btn-primary w-30 mt-3 me-3 mb-3">Signup</button>
    </form>

</body>